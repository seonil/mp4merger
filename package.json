{
  "name": "mp4merger",
  "version": "1.0.1",
  "description": "Web-based MP4 video merger with trim, timelapse, and speedup features",
  "main": "electron-main.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "electron": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win --x64"
  },
  "build": {
    "appId": "com.mp4merger.app",
    "productName": "MP4 Merger",
    "files": [
      "electron-main.js",
      "server.js",
      "public/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "portable",
      "signAndEditExecutable": false
    },
    "directories": {
      "output": "dist"
    }
  },
  "keywords": [
    "video",
    "ffmpeg",
    "merge",
    "mp4",
    "timelapse"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "fluent-ffmpeg": "^2.1.3"
  },
  "devDependencies": {
    "electron": "^38.2.0",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.1.10"
  }
}
